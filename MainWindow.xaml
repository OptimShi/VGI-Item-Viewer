<Window x:Class="VGI_Item_Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VGI_Item_Viewer"
        mc:Ignorable="d"
        Title="VGI Item Viewer" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="OpenCommandBinding_Executed"/>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Control" Command="Open"/>
    </Window.InputBindings>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" /> <!-- MENU -->
            <RowDefinition Height=".1*" /> <!-- MAIN -->
            <RowDefinition Height="20" /> <!-- STATUSBAR-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".1*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem x:Name="miOpen" Header="Open..." Command="Open"/>
                <MenuItem x:Name="miExit" Header="Exit" Click="miExit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem x:Name="miEditOptions" Header="Options..." Click="miEditOptions_Click"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1" x:Name="tabGroup">
            <TabItem Header="Wands" x:Name="tabMagic">
                <DataGrid x:Name="gridMagicItems" d:ItemsSource="{d:SampleData ItemCount=5}" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Missile" x:Name="tabMissile">
                <DataGrid x:Name="gridMissileItems" d:ItemsSource="{d:SampleData ItemCount=5}" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Melee" x:Name="tabMelee">
                <DataGrid x:Name="gridMeleeItems" d:ItemsSource="{d:SampleData ItemCount=5}" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Pets" x:Name="tabPets">
                <DataGrid x:Name="gridPetItems" d:ItemsSource="{d:SampleData ItemCount=5}" IsReadOnly="True" AutoGeneratingColumn="gridPetItems_AutoGeneratingColumn"/>
            </TabItem>

        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock Name="lblResultsCount" Text="RESULTS" HorizontalAlignment="Left" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="lblFilename" Text="FILENAME" HorizontalAlignment="Right" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
